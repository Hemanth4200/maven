pipeline {
    // add your slave label name
    agent { label 'mavenslave'}
    tools{
        maven 'maven'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn clean package'
            }
        }
        
        stage ('deploy') {

            steps {
               sshagent(['tomcat_key']) {
              sh "scp -o StrictHostKeyChecking=no  target/maven-web-application.war  ec2-user@13.233.153.145:/opt/tomcat9/webapps"
            
                    
            }
            }
        }

        
    }
}
